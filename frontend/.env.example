# Server
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# Observability
OTEL_DENO=true
OTEL_SERVICE_NAME=frontend
# OTLP endpoint (example):
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318

# Security
ENABLE_CSP=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000
FRAME_OPTIONS=DENY
ENABLE_CORP=false
ENABLE_COOP=false
ENABLE_COEP=false
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

